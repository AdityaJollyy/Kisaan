# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# For local MongoDB
MONGO_URI=mongodb://localhost:27017/kisaan
# For MongoDB Atlas (replace with your connection string)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/kisaan

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=90d

# Google Gemini AI Integration
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_google_gemini_api_key_here

# Cloudinary Configuration for Image Storage
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Twilio Configuration for SMS/OTP Verification
# Get these from your Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Option 1: Twilio Verify Service (Recommended)
# Create a Verify Service in Twilio Console and get the SID
TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_service_sid_here

# Option 2: Direct SMS (Alternative - requires phone number)
# Buy a phone number from Twilio and add it here in E.164 format (e.g., +1234567890)
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here
